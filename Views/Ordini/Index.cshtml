@model IEnumerable<Pizzeria.Models.Ordini>

@{
    ViewBag.Title = "Index";
}

<h2 class="text-center mb-4">Lista degli ordini</h2>

<div class="text-center mb-3">
    @Html.ActionLink("Crea Nuovo", "Create", null, new { @class = "btn btn-primary" })
</div>

<div class="container">
    <div class="row justify-content-center">
        <div class="col-lg-10">
            <div class="table-responsive">
                <table class="table table-striped table-bordered">
                    <thead class="thead-dark">
                        <tr>
                            <th>Nome Cliente</th>
                            <th>Cognome Cliente</th>
                            <th>Indirizzo</th>
                            <th>Note</th>
                            <th>Stato</th>
                            <th>Costo Consegna</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@Html.DisplayFor(modelItem => item.Users.Nome)</td>
                                <td>@Html.DisplayFor(modelItem => item.Users.Cognome)</td>
                                <td>@Html.DisplayFor(modelItem => item.Indirizzo)</td>
                                <td>@Html.DisplayFor(modelItem => item.Note)</td>
                                <td>@Html.DisplayFor(modelItem => item.Stato)</td>
                                <td>@Html.DisplayFor(modelItem => item.CostoCons) €</td>
                                <td>
                                    <div class="btn-group" role="group" aria-label="Actions">
                                        @Html.ActionLink("Dettagli", "Details", "OrdArts", new { id = item.Ordine_ID }, new { @class = "btn btn-secondary btn-sm" })
                                        @Html.ActionLink("Modifica", "Edit", new { id = item.Ordine_ID }, new { @class = "btn btn-info btn-sm" })
                                        @Html.ActionLink("Elimina", "Delete", new { id = item.Ordine_ID }, new { @class = "btn btn-danger btn-sm" })
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>